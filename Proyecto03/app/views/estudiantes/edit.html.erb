<%= stylesheet_link_tag "estilos.css" %>
<%= stylesheet_link_tag "bootstrap.min.css" %>
<%= favicon_link_tag 'favicon2.ico' %>
<!--Formulario registrarse-->
<%= render 'layouts/header' %>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h3 class="centerh3">Configuraci√≥n</h3>
        <%= form_for(@estudiante) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :nombre %>
        <%= f.text_field :nombre, class: 'form-control' %>

        <%= f.label :correo %>
        <%= f.text_field :correo, class: 'form-control'  %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control'  %>

        <%= f.label :password_confirmation, 'Confirmation'  %>
        <%= f.password_field :password_confirmation, class: 'form-control'  %>

        <%= f.submit "Guardar cambios", class: "btn btn-success btn-lg btn-block" %>
        <% end %>	
    </div>
    <div class="col-md-4"></div>
</div>